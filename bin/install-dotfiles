#!/bin/bash

# Get dotfiles DIR relative to this script
DIR="$(dirname $( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )../)"

# SublimeText3

ln -sF $DIR/st3/Packages/User/Default\ (OSX).sublime-keymap ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/Default\ (OSX).sublime-keymap
ln -sF $DIR/st3/Packages/User/Distraction\ Free.sublime-settings ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/Distraction\ Free.sublime-settings
ln -sF $DIR/st3/Packages/User/Preferences.sublime-settings ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/Preferences.sublime-settings
ln -sF $DIR/st3/Packages/User/Theme\ -\ Afterglow ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/Theme\ -\ Afterglow

### Link .RC Files

# Ack
ln -s $DIR/.ackrc $HOME/.ackrc

# Sublime Custom Theme
ln -s $DIR/Sublime\ Text\ 3/Packages/Theme\ -\ Default $HOME/Library/Application\ Support/Sublime\ Text\ 3/Packages/Theme\ -\ Default

# ZProfile
ln -s $DIR/.zprofile $HOME/.zprofile

# Oh-My-Zsh
ln -s $DIR/.zshrc $HOME/.zshrc

# VIM
ln -s $DIR/.vimrc $HOME/.vimrc
ln -s $DIR/.gvimrc $HOME/.gvimrc
ln -s $DIR/.vim/ $HOME/.vim
ln -s $DIR/.tern-config $HOME/.tern-config

# NODE
ln -s $DIR/.noderc $HOME/.noderc

# Tig Pager
ln -s $DIR/.tigrc $HOME/.tigrc

# JSHint
ln -s $DIR/.jshintrc $HOME/.jshintrc

# IRSSI
ln -s $DIR/.irssi/config $HOME/.irssi/config
